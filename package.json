{
  "name": "@xcelera/cli",
  "description": "CLI for xcelera.dev",
  "version": "1.0.0",
  "author": "",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xcelera-dev/cli.git"
  },
  "bugs": {
    "url": "https://github.com/xcelera-dev/cli/issues"
  },
  "keywords": ["actions", "xcelera", "performance", "lighthouse"],
  "exports": {
    ".": "./dist/action.js"
  },
  "bin": {
    "xcelera": "dist/cli.js"
  },
  "files": ["dist", "LICENSE", "README.md"],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "check": "npx @biomejs/biome check",
    "format:write": "npx @biomejs/biome format --write",
    "local-action": "npx @github/local-action . src/action.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest --passWithNoTests",
    "all": "npm run format:write && npm run check && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "is-network-error": "^1.1.0",
    "parse-github-url": "^1.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@github/local-action": "^5.2.0",
    "@jest/globals": "^30.1.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.1",
    "jest": "^30.1.3",
    "make-coverage-badge": "^1.2.0",
    "msw": "^2.11.1",
    "rollup": "^4.50.0",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.1",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
